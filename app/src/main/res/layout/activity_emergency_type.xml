<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.co.ivaylokhr.codeforbulgaria.EmergencyHealthActivity">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/backButton"
        android:layout_x="30dp"
        android:layout_y="388dp"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Катастрофа"
        android:id="@+id/catastrophe"
        android:layout_y="60dp"
        android:layout_x="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="Ранен"
        android:id="@+id/wounded"
        android:layout_x="200dp"
        android:layout_y="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="пристъп"
        android:id="@+id/stroke"
        android:layout_x="200dp"
        android:layout_y="240dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="75dp"
        android:text="изгаряне"
        android:id="@+id/burn"
        android:layout_x="30dp"
        android:layout_y="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp" />

</RelativeLayout>
